<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
          </div>
          <div class='field-input'>
            <%= f.text_field :child_nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password（同じものをもう一度）%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :last_name（子供の名字）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :last_name %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :first_name（子供の名前）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :last_name（フリガナ）%>
          </div>
          <div class='field-input'>
            <%= f.text_field :last_name_kana, autofocus: true %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :first_name（フリガナ） %>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :parent_name（保護者のフルネーム） %>
          </div>
          <div class='field-input'>
            <%= f.text_field :parent_name, autofocus: true %>
          </div>
        </div>
    
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
